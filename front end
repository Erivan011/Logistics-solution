    <script>
        const API_URL = 'http://localhost:3000/api';
        
        async function loadDashboard() {
            try {
                const entregasResponse = await fetch(API_URL + '/entregas');
                const entregasData = await entregasResponse.json();
                
                const estoqueResponse = await fetch(API_URL + '/estoque');
                const estoqueData = await estoqueResponse.json();
                
                if (entregasData.success && estoqueData.success) {
                    document.getElementById('total-entregas').textContent = entregasData.total;
                    document.getElementById('total-estoque').textContent = estoqueData.total;
                    
                    const entregasPendentes = entregasData.data.filter(e => e.status === 'PENDENTE').length;
                    document.getElementById('entregas-pendentes').textContent = entregasPendentes;
                    
                    const entregasList = document.getElementById('entregas-list');
                    entregasList.innerHTML = entregasData.data.map(entrega => `
                        <div class="delivery-item">
                            <h4>Entrega #${entrega.id} - ${entrega.destino}</h4>
                            <p>Status: ${entrega.status}</p>
                            <p>Medicamentos: ${entrega.medicamentos.join(', ')}</p>
                            <p>Data: ${entrega.data} | Tempo: ${entrega.tempoEntrega}</p>
                        </div>
                    `).join('');
                }
            } catch (error) {
                document.getElementById('entregas-list').innerHTML = '<p>Erro ao carregar dados.</p>';
            }
        }
        
        document.addEventListener('DOMContentLoaded', loadDashboard);
    </script>
